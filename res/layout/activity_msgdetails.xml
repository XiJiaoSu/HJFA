<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_messaged_title"
        />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_messaged_content"
	    android:layout_marginTop="10dp"
	    android:layout_below="@id/tv_messaged_title"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_messaged_date"
	    android:layout_marginTop="10dp"
	    android:layout_below="@id/tv_messaged_content"
	    android:layout_alignParentRight="true"
	    />
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/close"
	    android:id="@+id/iv_messaged_close"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    />
</RelativeLayout>
